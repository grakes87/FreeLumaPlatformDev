# ============================================
# Free Luma Platform - Environment Variables
# ============================================
# Copy this file to .env.local and fill in values.
# Required variables are marked with [REQUIRED].
# Optional variables have sensible defaults.

# ---- Database (MySQL via Sequelize) ----
# [REQUIRED] MySQL connection settings
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=freeluma_dev
DB_USER=root
DB_PASS=

# ---- Authentication ----
# [REQUIRED] Secret for signing JWT tokens (min 32 characters)
JWT_SECRET=
# Number of bcrypt hashing rounds (default: 12)
BCRYPT_ROUNDS=12

# ---- Google OAuth ----
# Credentials from Google Cloud Console
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ---- Apple Sign-In ----
# Credentials from Apple Developer Console
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# ---- Backblaze B2 (S3-compatible storage) ----
# Used for avatar uploads, media storage
B2_KEY_ID=
B2_APP_KEY=
B2_BUCKET_NAME=
B2_REGION=us-west-004

# ---- Cloudflare CDN ----
# Base URL for CDN-served assets
CDN_BASE_URL=

# ---- Email (SMTP) ----
# For sending transactional emails (verification, password reset)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@freeluma.com

# ---- Web Push (VAPID) ----
# Generate keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@freeluma.com

# ---- Bible API ----
# Fallback API key for Bible content
BIBLE_API_KEY=

# ---- Application ----
# [REQUIRED] Public URL of the application
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Public CDN URL (if different from B2 direct)
NEXT_PUBLIC_CDN_URL=
# Must match VAPID_PUBLIC_KEY for client-side push subscription
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
